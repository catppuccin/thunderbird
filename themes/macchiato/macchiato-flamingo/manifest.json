{
  "manifest_version": 2,
  "name": "catppuccin-macchiato-flamingo",
  "version": "1.0.0",
  "applications": {
    "gecko": {
      "id": "theme@catppuccinorg.com",
      "strict_min_version": "60.0"
    }
  },
  "description": "Soothing pastel theme for Thunderbird - Macchiato Flamingo",
